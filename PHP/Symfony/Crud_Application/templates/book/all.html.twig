{% extends 'base.html.twig' %}

{% block title %}Books Listing{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 'Fira Sans', sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">List of Books</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr class="text-uppercase">
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Chapters</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            {# <th scope="col">Posted By</th> #}
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <th scope="row">{{book.id}}</th>
                    <td>{{book.title}}</td>
                    <td>{{book.author}}</td>
                    <td>{{book.chapters}}</td>
                    <td>{{book.description}}</td>
                    <td> 
                        {% if book.status == 0 %}
                            {{'In progress'}}
                        {% elseif book.status == 1 %}
                            {{'Under Review'}}
                        {% else %}
                            {{'Completed'}}
                        {% endif %}
                        {# {{book.status}} #}
                    </td>
                    {# <td>{{book.posted_by}}</td> #}
                    <td>
                        <a href="/book/edit/{{book.id}}">Edit</a>
                        |
                        <a href="/book/view/{{book.id}}">View</a>
                        |
                        <a href="/book/delete/{{book.id}}">Delete</a>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}