{% extends 'base_teacher.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: auto; width: 50%; font: 18px/1.5; background: white; border-radius: 10px; padding: 20px;}
        * {
            font-family: 'Fira Sans', sans-serif;
        }
        body{
            background-color: #f1ece3;
        }
    </style>
    <div class="container-fluid">
        <h1 class="text-center"> {{ user.name }} </h1>
    </div>
    <div class="example-wrapper">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    <td>
                        {% if 'ROLE_STUDENT' in user.roles|json_encode %}
                            {{ 'Student' }}
                        {% elseif 'ROLE_TEACHER' in user.roles|json_encode %}
                            {{ 'Teacher' }}
                        {% elseif 'ROLE_ADMIN' in user.roles|json_encode %}
                            {{ 'Admin' }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Phone_no</th>
                    <td>{{ user.phoneNo }}</td>
                </tr>
                <tr>
                    <th>Dob</th>
                    <td>{{ user.dob }}</td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td>{{ user.gender }}</td>
                </tr>
            </tbody>
        </table>

        {# <a href="{{ path('teacher_index') }}">back to list</a> #}

        {# <a href="{{ path('teacher_edit', {'id': user.id}) }}">edit</a> #}

        {{ include('teacher/_delete_form.html.twig') }}
    </div>
{% endblock %}
